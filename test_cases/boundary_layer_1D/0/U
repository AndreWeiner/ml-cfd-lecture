FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{    
    top
    {
        type            symmetryPlane;
    }
    
    bottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    
    left
    {
        type            cyclic;
    }
    
    right
    {
        type            cyclic;
    }
    
    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }
}

