FoamFile
{
    version     2.0;
    format      binary;
    arch        "LSB;label=32;scalar=64";
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    top
    {
        type            noSlip;
    }
    bottom
    {
        type            noSlip;
    }
    inlet
    {
        type            fixedValue;
        value           nonuniform List<vector> 0;
    }
    outlet
    {
        type            zeroGradient;
    }
    back
    {
        type            empty;
    }
    front
    {
        type            empty;
    }
    cylinder
    {
        type            agentRotatingWallVelocity;
        origin          (0.2 0.2 0);
        axis            (0 0 1);
        policy          policy.pt;
        startTime       0;
        interval        20;
        train           1;
        absOmegaMax     0.05;
        logStdMax       2;
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform (0 0 0);
    }
}


